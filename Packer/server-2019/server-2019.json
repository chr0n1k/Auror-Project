{
    "variables": {
      "boot_wait": "5m",
      "disk_size": "40960",
      "iso_checksum": "sha256:549bca46c055157291be6c22a3aaaed8330e78ef4382c99ee82c896426a1cee1",
      "iso_url": "WinSrv_2019_17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
      "memsize": "2048",
      "numvcpus": "2",
      "vm_name": "Server2019",
      "winrm_password" : "vagrant",
      "winrm_username" : "vagrant"
    },
	"builders": [
		{
            "type": "virtualbox-iso",
            "guest_os_type": "Windows2019_64",
            "vm_name": "{{user `vm_name`}}",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "guest_additions_mode": "disable",
            "headless": false,
            "boot_wait": "{{user `boot_wait`}}",
            "disk_size": "{{user `disk_size`}}",
            "communicator":"winrm",
            "winrm_username": "{{user `winrm_username`}}",
            "winrm_password": "{{user `winrm_password`}}",
            "winrm_timeout": "4h",
			"shutdown_command": "a:/sysprep.bat",
            "floppy_files": [
				"scripts/srv2019/autounattend.xml",
				"scripts/srv2019/unattend.xml",
				"scripts/fixnetwork.ps1",
				"scripts/sysprep.bat",
				"scripts/disable-winrm.ps1",
				"scripts/enable-winrm.ps1",
				"scripts/winrmConfig.bat"
			],
            "vboxmanage": [
              ["modifyvm", "{{.Name}}", "--memory", "{{user `memsize`}}"],
              ["modifyvm", "{{.Name}}", "--cpus", "{{user `numvcpus`}}"]
            ]
        }
	],
	"post-processors": [
		{
			"type": "vagrant",
			"keep_input_artifact": false,
			"output": "../Vagrant/server-2019.box",
			"vagrantfile_template": "server-2019-vagrantfile.template"
		}
	]
}